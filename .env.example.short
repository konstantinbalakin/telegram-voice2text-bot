TELEGRAM_BOT_TOKEN=
OPENAI_API_KEY=
BOT_MODE=polling

WHISPER_PROVIDERS=["openai", "faster-whisper"] #["faster-whisper", "whisper", "openai"]

PRIMARY_PROVIDER=faster-whisper
WHISPER_ROUTING_STRATEGY=hybrid #single, fallback, benchmark, hybrid
BENCHMARK_MODE=false

FASTER_WHISPER_MODEL_SIZE=medium #tiny, base, small, medium, large-v2, large-v3
FASTER_WHISPER_COMPUTE_TYPE=int8 #int8, float32
FASTER_WHISPER_BEAM_SIZE=1
FASTER_WHISPER_VAD_FILTER=true
FASTER_WHISPER_DEVICE=cpu

WHISPER_DEVICE=cpu

OPENAI_MODEL=whisper-1
OPENAI_TIMEOUT=60

FALLBACK_PROVIDER=openai
DURATION_THRESHOLD_SECONDS=30

# Hybrid Strategy
HYBRID_SHORT_THRESHOLD=20
HYBRID_DRAFT_PROVIDER=faster-whisper
HYBRID_DRAFT_MODEL=base #tiny, small, base
HYBRID_QUALITY_PROVIDER=faster-whisper
HYBRID_QUALITY_MODEL=medium

# LLM Text Refinement
LLM_REFINEMENT_ENABLED=true
LLM_PROVIDER=deepseek #deepseek, openai, gigachat
LLM_API_KEY=
LLM_MODEL=deepseek-chat
LLM_BASE_URL=https://api.deepseek.com
LLM_REFINEMENT_PROMPT=Улучши транскрипцию голосового сообщения: исправь орфографические и пунктуационные ошибки, добавь правильную пунктуацию и заглавные буквы, сохрани исходный смысл и стиль речи, верни только исправленный текст без комментариев
LLM_TIMEOUT=30
LLM_DEBUG_MODE=false #true = sends comparison message (draft vs refined)

# Audio Preprocessing
AUDIO_CONVERT_TO_MONO=false
AUDIO_TARGET_SAMPLE_RATE=16000
AUDIO_SPEED_MULTIPLIER=1.0

DATABASE_URL=sqlite+aiosqlite:///./data/bot.db

# Logging: DEBUG (shows SQL, method params, execution flow), INFO (general), WARNING (production)
# DEBUG creates logs/debug.log with detailed tracing. Use for local debugging only.
LOG_LEVEL=INFO
LOG_DIR=./logs

MAX_CONCURRENT_WORKERS=1
MAX_QUEUE_SIZE=1
MAX_VOICE_DURATION_SECONDS=7200
TRANSCRIPTION_TIMEOUT=7200
DEFAULT_DAILY_QUOTA_SECONDS=60 #еще не внедрено
PROGRESS_RTF=0.1
PROGRESS_UPDATE_INTERVAL=5
